{# components/city-breadcrumbs-component.njk #}
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    {% for item in items %}
      <li class="{% if item.active %}is-active{% endif %}">
        <a href="{{ item.url }}"
           {% if item.active %} aria-current="page" {% endif %}>
          {{ item.label }}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>
